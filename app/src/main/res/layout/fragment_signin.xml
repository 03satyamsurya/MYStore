<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SigninFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageButton
           android:id="@+id/cross1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="330dp"
           android:background="@android:color/transparent"
           android:padding="22dp"
           android:src="@drawable/ic_action_cross"
           tools:layout_editor_absoluteX="335dp"
           tools:layout_editor_absoluteY="16dp" />

       <ImageView
           android:id="@+id/img1"
           android:layout_width="223dp"
           android:layout_height="135dp"
           android:layout_below="@id/cross1"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="2dp"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="2dp"
           android:layout_marginEnd="90dp"
           android:layout_marginRight="2dp"
           android:layout_marginBottom="2dp"
           android:padding="3dp"
           android:src="@drawable/logo" />

       <EditText
           android:id="@+id/email0"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/img1"
           android:layout_margin="8dp"
           android:backgroundTint="#70ffffff"
           android:drawableLeft="@drawable/mail"
           android:hint="Email"
           android:textColor="#ffffff"
           android:textColorHint="#80ffffff"
           android:textSize="18sp"
           android:textStyle="bold" />


       <EditText
           android:id="@+id/password0"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/email0"
           android:layout_margin="8dp"
           android:backgroundTint="#70ffffff"
           android:drawableLeft="@drawable/password"
           android:hint="password"
           android:inputType="text|textPassword"
           android:textColor="#ffffff"
           android:textColorHint="#80ffffff"
           android:textSize="18sp"
           android:textStyle="bold" />
       <TextView
           android:id="@+id/frgotpassword"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/password0"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="8dp"
           android:layout_marginEnd="20dp"
           android:layout_marginLeft="5dp"
           android:text=" Forgot Password"
           android:textColor="#ffffff"
           android:textSize="19dp"
           android:textStyle="bold" />

       <Button
           android:id="@+id/signinbtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/frgotpassword"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="45dp"
           android:layout_marginLeft="25dp"
           android:layout_marginTop="30dp"
           android:layout_marginEnd="45dp"
           android:enabled="false"
           android:background="#ee1c25"
           android:textColor="#50ffffff"
           android:textAllCaps="false"
           android:text="Sign in"
           android:textSize="20dp"
           android:textStyle="bold" />

       <ProgressBar
           android:id="@+id/progressbar1"
           style="?android:attr/progressBarStyle"
           android:layout_width="76dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/signinbtn"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="166dp"
           android:layout_marginTop="20dp"
           android:layout_marginEnd="169dp"
           android:visibility="invisible" />

       <TextView
           android:id="@+id/gotoregister"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/progressbar1"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="35dp"
           android:layout_marginLeft="2dp"
           android:layout_marginTop="20dp"
           android:layout_marginEnd="20dp"
           android:text=" Don't have an account? Sign up"
           android:textColor="#ffffff"
           android:textSize="19dp"
           android:textStyle="bold" />
   </RelativeLayout>

</FrameLayout>