<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/closesignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:src="@drawable/ic_action_cross"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/img0"
            android:layout_width="169dp"
            android:layout_height="72dp"
            android:layout_below="@id/closesignup"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-27dp"
            android:layout_marginEnd="113dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:padding="3dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img0"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:backgroundTint="#70ffffff"
            android:drawableLeft="@drawable/mail"
            android:hint="Email Id"
            android:textColorHint="#70ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_margin="5dp"
            android:backgroundTint="#70ffffff"
            android:drawableLeft="@drawable/profile"
            android:hint="Name"
            android:textColor="#ffffff"
            android:textColorHint="#70ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullname"
            android:layout_margin="5dp"
            android:backgroundTint="#70ffffff"
            android:drawableLeft="@drawable/password"
            android:hint="Password [at least 6 characters]"
            android:textColor="#ffffff"
            android:inputType="text|textPassword"
            android:textColorHint="#70ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/cnfrmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_margin="5dp"
            android:backgroundTint="#70ffffff"
            android:drawableLeft="@drawable/password"
            android:hint="Confirm Password"
            android:textColorHint="#70ffffff"
            android:textColor="#ffffff"
            android:inputType="text|textPassword"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cnfrmpassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="25dp"
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="45dp"
            android:background="#ee1c25"
            android:textColor="#50ffffff"
            android:textAllCaps="false"
            android:text="Sign up"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="113dp"
            android:layout_height="40dp"
            android:layout_below="@id/signupbtn"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/gotologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="already have an account? Sign in"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />




    </RelativeLayout>


</FrameLayout>